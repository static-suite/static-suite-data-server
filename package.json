{
  "name": "@static-suite/static-suite-data-server",
  "version": "0.0.8",
  "description": "A flexible, fast and developer friendly Data Server for Static Suite",
  "main": "./dist/lib/index.js",
  "typings": "./dist/lib/index.d.ts",
  "license": "GPL-2.0+",
  "homepage": "https://www.drupal.org/project/static_suite",
  "repository": {
    "type": "git",
    "url": "https://github.com/static-suite/static-suite-data-server"
  },
  "dependencies": {
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@microsoft/api-extractor": "^7.18.19",
    "@types/jest": "^27.0.2",
    "@types/tap": "^15.0.5",
    "bulma": "^0.9.3",
    "chokidar": "^3.5.2",
    "clear-module": "^4.1.1",
    "clipboard": "^2.0.8",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "decache": "^4.6.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.7",
    "marked": "^3.0.4",
    "microtime": "^3.0.0",
    "mime-types": "^2.1.33",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.13",
    "pug": "^3.0.2",
    "simple-datatables": "^3.1.2",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.3",
    "winston": "^3.3.3",
    "yargs": "^17.2.1"
  },
  "bin": {
    "static-suite-data-server": "./dist/bin/serve.js"
  },
  "scripts": {
    "dev": "tsc-watch --onSuccess \"yarn lint\"",
    "build": "rm -Rf dist && yarn copy-http-files-to-src && yarn lint && tsc && yarn api-extractor run --local --verbose && yarn post-build && yarn copy-http-files-to-dist",
    "post-build": "yarn rimraf dist/**/*__tests__",
    "serve": "node ./dist/bin/serve.js http --port=57471 --data-dir=./src/__tests__/fixtures/data --work-dir=./src/__tests__/fixtures/work --query-dir=./src/__tests__/fixtures/query  --hook-dir=./src/__tests__/fixtures/hook --task-dir=./src/__tests__/fixtures/task --run-mode=dev --log-level=debug",
    "lint": "eslint . --ext .ts",
    "docs": "yarn typedoc --out docs src/lib/",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "jest --watch",
    "copy-http-files-to-src": "node ./scripts/copy-http-files-to-src.js",
    "copy-http-files-to-dist": "cp -r ./src/http/public/ ./dist/http/ && cp -r ./src/http/views/ ./dist/http/ && cp README.md ./dist/http/"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/marked": "^3.0.2",
    "@types/microtime": "^2.1.0",
    "@types/mime-types": "^2.1.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.10.2",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^4.3.7",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.6",
    "yarn-upgrade-all": "^0.5.4"
  },
  "_moduleAliases": {
    "@bin": "dist/bin",
    "@http": "dist/http",
    "@lib": "dist/lib",
    "@__tests__": "dist/__tests__"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "src/__tests__/fixtures/*",
      "src/__tests__/mocks/*"
    ],
    "moduleNameMapper": {
      "^@bin/(.*)$": "<rootDir>/src/bin/$1",
      "^@http/(.*)$": "<rootDir>/src/http/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@__tests__/(.*)$": "<rootDir>/src/__tests__/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build"
    }
  }
}
