extends includes/layout.pug

block vars
  - var title = "Available cache bins | Static Suite Data Server"

block content
  h1(class="title is-1")="Available cache bins"
  table(class="table is-fullwidth  is-hoverable")
    tbody
      if cacheBins.length
        each cacheBin in cacheBins
          tr
            td= cacheBin
            td
              a(href=`/cache/${cacheBin}/clear`)="Clear"
      else
        tr
          td="No cache bins available"

